{
  "compilerOptions": {
    "target": "ES6",              
    "module": "CommonJS",         
    "outDir": "./dist",           
    "rootDir": "./src",           
    "strict": true,               
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,         
    "resolveJsonModule": true,    
    "noImplicitAny": true,        
    "noUnusedLocals": true,       
    "noUnusedParameters": true,   
    "noImplicitReturns": true,    
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],            
  "exclude": ["node_modules"]    
}